    <script>
        // REPLACE WITH ACTUAL ORDER URL
        function orderNow() {
            window.location.href = '[ORDER_URL]';
        }
        
        // Countdown timer
        function updateCountdown() {
            const now = new Date().getTime();
            const tomorrow = new Date();
            tomorrow.setDate(tomorrow.getDate() + 1);
            tomorrow.setHours(0, 0, 0, 0);
            const distance = tomorrow.getTime() - now;
            
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);
            
            document.getElementById('countdown').innerHTML = `Promo berakhir dalam: ${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
        }
        
        // Dynamic viewers count
        function updateViewers() {
            const viewers = document.getElementById('viewers');
            const currentCount = parseInt(viewers.textContent);
            const change = Math.floor(Math.random() * 5) - 2;
            const newCount = Math.max(50, Math.min(100, currentCount + change));
            viewers.textContent = newCount;
        }
        
        // Dynamic stock count
        function updateStock() {
            const stock = document.getElementById('stock');
            const currentStock = parseInt(stock.textContent);
            if (currentStock > 10 && Math.random() < 0.3) {
                stock.textContent = currentStock - 1;
            }
        }
        
        // Scroll animations
        function handleScrollAnimations() {
            const elements = document.querySelectorAll('.fade-in');
            elements.forEach(element => {
                const elementTop = element.getBoundingClientRect().top;
                const elementVisible = 150;
                
                if (elementTop < window.innerHeight - elementVisible) {
                    element.classList.add('visible');
                }
            });
        }
        
        // Initialize
        setInterval(updateCountdown, 1000);
        setInterval(updateViewers, 15000);
        setInterval(updateStock, 45000);
        
        window.addEventListener('scroll', handleScrollAnimations);
        
        updateCountdown();
        handleScrollAnimations();
    </script>
